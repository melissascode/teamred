@{
    @* need to be able to check if user is logged in or not (cookies?) *@
    string user = "";
    if(ViewData["Login"] == null) {
        ViewData["Login"] = false;
        user = "Username"; @* This should get the logged in user, doesnt have to be a string *@
        bool user_type; @* Should hold user type from database *@
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="header-container">
        <div class="box-base header">
            <div class="title">
                @ViewData["Title"]
            </div>
            @if (!ViewData["Login"].Equals(true)) {
                <a class="nav-item" href="/">Home</a>
                <a href="account" class="nav-item">@user</a> @* Display username *@
                <a href="" class="nav-item">[Log out]</a> @* Should logout, redirect *@
            }
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
